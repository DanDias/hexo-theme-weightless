<div class="m2 p2">
	<%
	var posts = [];
	site.posts.forEach(function(item, index) {
		var year = date(item.date, 'YYYY');
		if (!posts[year]) {
			posts[year] = [];
		}
		posts[year].push({
			'title': item.title,
			'path': item.path
		})
	});
	%>
	<% posts.forEach(function(single, year) { %>
		<div class="col-12 bg-white rounded mb4">
			<span class="btn block border-bottom muted"><%- year %></span>
			<% var length = single.length;
			single.forEach(function(item, index) { %>
			<a href="<%- url_for(item.path) %>" class="btn block<%- (index != length - 1 ? ' border-bottom' : '') %>"><%- item.title %></a>
			<% }) %>
		</div>
	<% }) %>
</div>
