<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">

	<%
		var title = page.title;
	%>

	<title><% if (title){ %><%= title %> | <% } %><%= config.title %></title>
	<meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
	<% if (config.feed) { %>
		<% if (config.feed.type == 'atom') { %>
			<link rel="alternate" href="<%= url_for(config.feed.path) %>" title="<%= config.title %>" type="application/atom+xml" />
		<% }else if (config.feed.type == 'rss2') { %>
			<link rel="alternate" href="<%= url_for(config.feed.path) %>" title="<%= config.title %>" type="application/rss+xml" />
		<% } %>
	<% } %>
	<link rel="stylesheet" href="<%- config.root %>css/normalize.css" type="text/css">
	<link rel="stylesheet" href="<%- config.root %>css/basscss.css" type="text/css">
	<link rel="stylesheet" href="<%- config.root %>css/basscss-ui-groups.css" type="text/css">
	<link href="https://jerry.im/gapi/css?family=Lato:300,400,700,400italic&subset=latin,latin-ext" rel="stylesheet" type="text/css">
	<link rel="stylesheet" href="<%- config.root %>css/tomorrow.css" type="text/css">
	<link rel="stylesheet" href="<%- config.root %>css/style.css" type="text/css">

	<!--[if lt IE 9]><script src="<%- config.root %>js/html5.js" type="text/javascript"></script><![endif]-->
	<script src="<%- config.root %>js/main.js" type="text/javascript"></script>

	<% if (config.lunr) { %>
		<link rel="stylesheet" href="https://jerry.sh/jquery.modal.css" type="text/css">
		<script type="text/javascript">
			var jQueryJS = 'https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-beta1/jquery.min.js';
			var modalJS = 'https://jerry.sh/jquery.modal.js';
			var lunrJS = 'https://jerry.sh/lunr.js';
			var lunrAsset = '<%= url_for(config.lunr.path + 'all.json') %>';
		</script>
		<script src="<%- config.root %>js/fn.js" type="text/javascript"></script>
	<% } %>
</head>
